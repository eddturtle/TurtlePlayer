<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutNow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <RelativeLayout
                android:id="@+id/relativeLayout_curr_playing"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="1">

            <RelativeLayout
                    android:id="@+id/relativeLayout_albumArt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <include
                        android:id="@+id/albumArt"
                        layout="@layout/album_art"/>

                <include
                        android:id="@+id/albumArtRight"
                        layout="@layout/album_art"/>

                <include
                        android:id="@+id/albumArtLeft"
                        layout="@layout/album_art" />

            </RelativeLayout>

            <TextView
                    android:id="@+id/trackDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/durationInitialValue"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="visible" />

            <TextView
                    android:id="@+id/trackPostionSeparator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/trackDuration"
                    android:layout_alignBaseline="@id/trackDuration"
                    android:text="@string/trackPostionSeparator"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="visible" />


            <TextView
                    android:id="@+id/trackCurrPostion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/trackPostionSeparator"
                    android:layout_alignBaseline="@id/trackDuration"
                    android:text="@string/currPositionInitialValue"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            <ImageView
                    android:id="@+id/bowmenu_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/menubow_top_290"
                    android:contentDescription="@string/pointer"
                    android:visibility="invisible"/>

            <TextView
                    android:id="@+id/track_instant_filter_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/lengthInitialValue"
                    android:paddingTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="invisible"
                    />


            <ImageView
                    android:id="@+id/bowmenu_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/menubow_left_290"
                    android:contentDescription="@string/pointer"
                    android:visibility="invisible"/>

            <turtle.player.view.VerticalTextView
                    android:id="@+id/track_instant_filter_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/albumInitialValue"
                    android:paddingTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="invisible"
                    />

            <ImageView
                    android:id="@+id/bowmenu_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/menubow_right_290"
                    android:contentDescription="@string/pointer"
                    android:visibility="invisible"/>

            <turtle.player.view.VerticalTextView
                    android:id="@+id/track_instant_filter_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/artistInitialValue"
                    android:gravity="bottom"
                    android:paddingTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="invisible"
                    />

            <ImageView
                    android:id="@+id/bowmenu_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/menubow_bottom_290"
                    android:contentDescription="@string/pointer"
                    android:visibility="invisible"/>


            <TextView
                    android:id="@+id/track_instant_filter_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:text="@string/trackInitialValue"
                    android:paddingTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="invisible"
                    />

            <ImageView
                    android:id="@+id/pointer"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/pointer120"
                    android:scaleType="center"
                    android:contentDescription="@string/pointer"
                    android:visibility="invisible"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/relativeLayout_now_buttons"
                android:layout_width="fill_parent"
                android:layout_height="84dp"
                android:layout_marginTop="-5dp">

            <RelativeLayout
                android:background="@drawable/header_bg100"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true">

                <ImageView
                        android:id="@+id/playButton"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="@string/play"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:src="@drawable/play64" />

                <ImageView
                        android:id="@+id/backButton"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:contentDescription="@string/back"
                        android:paddingLeft="18dp"
                        android:paddingRight="12dp"
                        android:src="@drawable/back48" />

                <ImageView
                        android:id="@+id/nextButton"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:contentDescription="@string/next"
                        android:paddingLeft="12dp"
                        android:paddingRight="18dp"
                        android:src="@drawable/next48" />

                <ImageView
                        android:id="@+id/repeatButton"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/playButton"
                        android:contentDescription="@string/back"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:src="@drawable/repeat48" />

                <ImageView
                        android:id="@+id/shuffleButton"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/playButton"
                        android:contentDescription="@string/back"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:src="@drawable/shuffle48" />

            </RelativeLayout>
            <SeekBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/progress_bar_full"
                    android:visibility="visible"
                    android:layout_alignParentTop="true"/>
        </RelativeLayout>

</LinearLayout>
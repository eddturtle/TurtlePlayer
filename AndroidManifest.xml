<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.turtleplayerv2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> 

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="com.turtleplayer.TurtlePlayer" >
        <activity
            android:name="com.turtleplayer.Player"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            	android:name="com.turtleplayer.dirchooser.DirChooser"
                android:label="@string/dirchooser_label"
                android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="com.turtleplayer.player.DIR_CHOOSER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
   		<service android:name="com.turtleplayer.player.PlayerService" />
    </application>

</manifest>
